@page "/surveys/{Id:guid}/details"
@using Volo.Abp.Application.Dtos
@using Ejada.SurveyManager.Surveys.Dtos
@using Ejada.SurveyManager.Surveys
@using Ejada.SurveyManager.Localization
@inject NavigationManager NavigationManager
@inject ISurveyAppService SurveyService
@inject Volo.Abp.AspNetCore.Components.Web.AbpBlazorMessageLocalizerHelper<SurveyManagerResource> LH

@inherits AbpCrudPageBase<ISurveyAppService, SurveyDto, Guid, PagedAndSortedResultRequestDto, CreateSurveyDto, UpdateSurveyDto>

<Card Class="shadow-sm">
    <CardHeader Class="bg-white border-bottom">
        <Row Class="align-items-center justify-content-between g-3">
            <Column ColumnSize="ColumnSize.IsAuto">
                <div class="d-flex align-items-center">
                    <Icon Name="IconName.Eye" Class="text-primary me-2" Size="IconSize.Large" />
                    <div>
                        <h4 class="mb-0 fw-bold">@L["Survey Details"]</h4>
                        <small class="text-muted">@L["View survey details and questions"]</small>
                    </div>
                </div>
            </Column>
            <Column ColumnSize="ColumnSize.IsAuto">
                <Button Color="Color.Secondary" Outline Clicked="Back">
                    <Icon Name="IconName.ArrowLeft" />
                    @L["Back"]
                </Button>
            </Column>
        </Row>
    </CardHeader>

    <CardBody Class="p-4">
        @if (Survey == null)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">@L["Loading"]</span>
                </div>
                <p class="mt-3 text-muted">@L["Loading"]</p>
            </div>
        }
        else
        {
            <!-- General Information -->
            <Card Class="mb-4 border-0 shadow-sm">
                <CardHeader Class="bg-light">
                    <h5 class="mb-0 fw-semibold d-flex align-items-center">
                        <Icon Name="IconName.InfoCircle" Class="text-primary me-2" />
                        @L["General Information"]
                    </h5>
                </CardHeader>
                <CardBody>
                    <Row Class="g-3">
                        <Column ColumnSize="ColumnSize.Is12">
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase fw-semibold">@L["Survey Name"]</label>
                                <div class="d-flex align-items-center">
                                    <Icon Name="IconName.Poll" Class="text-primary me-2" />
                                    <h5 class="mb-0">@Survey.Name</h5>
                                </div>
                            </div>
                        </Column>
                        <Column ColumnSize="ColumnSize.Is6">
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase fw-semibold">@L["Purpose"]</label>
                                <p class="mb-0">@(string.IsNullOrWhiteSpace(Survey.Purpose) ? L["NotSpecified"] : Survey.Purpose)</p>
                            </div>
                        </Column>
                        <Column ColumnSize="ColumnSize.Is6">
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase fw-semibold">@L["Target Audience"]</label>
                                <p class="mb-0">@(string.IsNullOrWhiteSpace(Survey.TargetAudience) ? L["NotSpecified"] : Survey.TargetAudience)</p>
                            </div>
                        </Column>
                        <Column ColumnSize="ColumnSize.Is6">
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase fw-semibold">@L["Status"]</label>
                                <div>
                                    @if (Survey.IsActive)
                                    {
                                        <Badge Color="Color.Success">
                                            <Icon Name="IconName.Check" />
                                            @L["Active"]
                                        </Badge>
                                    }
                                    else
                                    {
                                        <Badge Color="Color.Secondary">
                                            <Icon Name="IconName.Times" />
                                            @L["Inactive"]
                                        </Badge>
                                    }
                                </div>
                            </div>
                        </Column>
                    </Row>
                </CardBody>
            </Card>

            <!-- Questions Section -->
            <Card Class="mb-4 border-0 shadow-sm">
                <CardHeader Class="bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-semibold d-flex align-items-center">
                            <Icon Name="IconName.QuestionCircle" Class="text-primary me-2" />
                            @L["Questions"]
                        </h5>
                        <Badge Color="Color.Info">@Survey.Questions.Count @L["Questions"]</Badge>
                    </div>
                </CardHeader>
                <CardBody>
                    @if (!Survey.Questions.Any())
                    {
                        <Alert Color="Color.Info" Visible>
                            <Icon Name="IconName.InfoCircle" Class="me-2" />
                            @L["No questions attached"]
                        </Alert>
                    }
                    else
                    {
                        <div class="row g-3">
                            @foreach (var question in Survey.Questions)
                            {
                                <Column ColumnSize="ColumnSize.Is12" @key="question">
                                    <Card Class="h-100 border">
                                        <CardBody>
                                            <div class="d-flex align-items-start mb-2">
                                                <Icon Name="IconName.File" Class="text-info me-2 mt-1" />
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1 fw-semibold">@question.Text</h6>
                                                    <Badge Color="Color.Primary" Class="mb-2">@question.Type.ToString()</Badge>
                                                </div>
                                            </div>
                                            @if (question.Options?.Any() == true)
                                            {
                                                <div class="ms-4">
                                                    <small class="text-muted d-block mb-2">@L["Options"]:</small>
                                                    <ul class="mb-0 small">
                                                        @foreach (var option in question.Options)
                                                        {
                                                            <li>
                                                                @option.Label
                                                                <Badge Color="Color.Secondary" Class="ms-1">@option.Type</Badge>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                            }
                                        </CardBody>
                                    </Card>
                                </Column>
                            }
                        </div>
                    }
                </CardBody>
            </Card>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                <Button Color="Color.Secondary" Outline Clicked="Back">
                    <Icon Name="IconName.ArrowLeft" />
                    @L["Back"]
                </Button>

                <Button Color="Color.Primary" Clicked="Edit">
                    <Icon Name="IconName.Edit" />
                    @L["Edit"]
                </Button>
            </div>
        }
    </CardBody>
</Card>

@code {
    [Parameter]
    public Guid Id { get; set; }

    private SurveyWithQuestionsDto Survey { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        Survey = await SurveyService.GetWithQuestionAsync(Id);
    }

    private void Back()
    {
        NavigationManager.NavigateTo("/surveys");
    }

    private void Edit()
    {
        NavigationManager.NavigateTo($"/surveys/{Id}/edit");
    }
}
