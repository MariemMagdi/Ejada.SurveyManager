@page "/surveys/{Id:guid}/details"
@using Volo.Abp.Application.Dtos
@using Ejada.SurveyManager.Surveys.Dtos
@using Ejada.SurveyManager.Surveys
@using Ejada.SurveyManager.Localization
@inject NavigationManager NavigationManager
@inject ISurveyAppService SurveyService
@inject Volo.Abp.AspNetCore.Components.Web.AbpBlazorMessageLocalizerHelper<SurveyManagerResource> LH

@inherits AbpCrudPageBase<ISurveyAppService, SurveyDto, Guid, PagedAndSortedResultRequestDto, CreateSurveyDto, UpdateSurveyDto>

<div class="modern-page-wrapper">
    <div class="glass-card">
        <div class="gradient-header">
            <div class="gradient-header-content">
                <Row Class="align-items-center justify-content-between g-3">
                    <Column ColumnSize="ColumnSize.IsAuto">
                        <div class="d-flex align-items-center">
                            <div class="header-icon-box me-3">
                                <Icon Name="IconName.Eye" Size="IconSize.ExtraLarge" />
                            </div>
                            <div>
                                <h2 class="mb-1 fw-bold text-white">@LH.Localize("SurveyDetails")</h2>
                                <p class="text-white-50 mb-0">@LH.Localize("ViewSurveyDetailsAndQuestions")</p>
                            </div>
                        </div>
                    </Column>
                    <Column ColumnSize="ColumnSize.IsAuto">
                        <Button Color="Color.Secondary" Outline Clicked="Back" Class="btn-light">
                            <Icon Name="IconName.ArrowLeft" />
                            @LH.Localize("Back")
                        </Button>
                    </Column>
                </Row>
            </div>
        </div>

        <div class="px-4 pb-4">
        @if (Survey == null)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">@LH.Localize("Loading")</span>
                </div>
                <p class="mt-3 text-muted">@LH.Localize("Loading")</p>
            </div>
        }
        else
        {
            <!-- General Information -->
            <div class="dashboard-card mb-4">
                <div class="dashboard-card-header">
                    <h5 class="dashboard-card-title">
                        <Icon Name="IconName.InfoCircle" Class="text-primary me-2" />
                        @LH.Localize("GeneralInformation")
                    </h5>
                </div>
                <div class="dashboard-card-body">
                    <Row Class="g-3">
                        <Column ColumnSize="ColumnSize.Is12">
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase fw-semibold">@LH.Localize("SurveyName")</label>
                                <div class="d-flex align-items-center">
                                    <Icon Name="IconName.Poll" Class="text-primary me-2" />
                                    <h5 class="mb-0">@Survey.Name</h5>
                                </div>
                            </div>
                        </Column>
                        <Column ColumnSize="ColumnSize.Is6">
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase fw-semibold">@LH.Localize("Purpose")</label>
                                <p class="mb-0">@(string.IsNullOrWhiteSpace(Survey.Purpose) ? LH.Localize("NotSpecified") : Survey.Purpose)</p>
                            </div>
                        </Column>
                        <Column ColumnSize="ColumnSize.Is6">
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase fw-semibold">@LH.Localize("TargetAudience")</label>
                                <p class="mb-0">@(string.IsNullOrWhiteSpace(Survey.TargetAudience) ? LH.Localize("NotSpecified") : Survey.TargetAudience)</p>
                            </div>
                        </Column>
                        <Column ColumnSize="ColumnSize.Is6">
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase fw-semibold">@LH.Localize("Status")</label>
                                <div>
                                    @if (Survey.IsActive)
                                    {
                                        <Badge Color="Color.Success">
                                            <Icon Name="IconName.Check" />
                                            @LH.Localize("Active")
                                        </Badge>
                                    }
                                    else
                                    {
                                        <Badge Color="Color.Secondary">
                                            <Icon Name="IconName.Times" />
                                            @LH.Localize("Inactive")
                                        </Badge>
                                    }
                                </div>
                            </div>
                        </Column>
                    </Row>
                </div>
            </div>

            <!-- Questions Section -->
            <div class="dashboard-card mb-4">
                <div class="dashboard-card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="dashboard-card-title">
                            <Icon Name="IconName.QuestionCircle" Class="text-primary me-2" />
                            @LH.Localize("Questions")
                        </h5>
                        <Badge Color="Color.Info">@Survey.Questions.Count @LH.Localize("Questions")</Badge>
                    </div>
                </div>
                <div class="dashboard-card-body">
                    @if (!Survey.Questions.Any())
                    {
                        <Alert Color="Color.Info" Visible>
                            <Icon Name="IconName.InfoCircle" Class="me-2" />
                            @LH.Localize("NoQuestionsAttached")
                        </Alert>
                    }
                    else
                    {
                        <div class="row g-3">
                            @foreach (var question in Survey.Questions)
                            {
                                <Column ColumnSize="ColumnSize.Is12" @key="question">
                                    <Card Class="h-100 border">
                                        <CardBody>
                                            <div class="d-flex align-items-start mb-2">
                                                <Icon Name="IconName.File" Class="text-info me-2 mt-1" />
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1 fw-semibold">@question.Text</h6>
                                                    <Badge Color="Color.Primary" Class="mb-2">@question.Type.ToString()</Badge>
                                                </div>
                                            </div>
                                            @if (question.Options?.Any() == true)
                                            {
                                                <div class="ms-4">
                                                    <small class="text-muted d-block mb-2">@LH.Localize("Options"):</small>
                                                    <ul class="mb-0 small">
                                                        @foreach (var option in question.Options)
                                                        {
                                                            <li>
                                                                @option.Label
                                                                <Badge Color="Color.Secondary" Class="ms-1">@option.Type</Badge>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                            }
                                        </CardBody>
                                    </Card>
                                </Column>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                <Button Color="Color.Primary" Outline Clicked="Back">
                    <Icon Name="IconName.ArrowLeft" />
                    @LH.Localize("Back")
                </Button>

                <Button Color="Color.Primary" Clicked="Edit" Class="btn-modern">
                    <Icon Name="IconName.Edit" />
                    @LH.Localize("Edit")
                </Button>
            </div>
        }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Guid Id { get; set; }

    private SurveyWithQuestionsDto Survey { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        Survey = await SurveyService.GetWithQuestionAsync(Id);
    }

    private void Back()
    {
        NavigationManager.NavigateTo("/surveys");
    }

    private void Edit()
    {
        NavigationManager.NavigateTo($"/surveys/{Id}/edit");
    }
}
