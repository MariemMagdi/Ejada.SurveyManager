@page "/surveys"
@using Volo.Abp.Application.Dtos
@using Ejada.SurveyManager.Surveys.Dtos
@using Ejada.SurveyManager.Surveys
@using Ejada.SurveyManager.Localization
@inject NavigationManager NavigationManager
@inject ISurveyAppService SurveyService
@inject Volo.Abp.AspNetCore.Components.Web.AbpBlazorMessageLocalizerHelper<SurveyManagerResource> LH

@inherits AbpCrudPageBase<ISurveyAppService, SurveyDto, Guid, PagedAndSortedResultRequestDto, CreateSurveyDto, UpdateSurveyDto>

<div class="modern-page-wrapper">
    <div class="glass-card">
        <div class="gradient-header">
            <div class="gradient-header-content">
                <Row Class="align-items-center justify-content-between g-3">
                    <Column ColumnSize="ColumnSize.IsAuto">
                        <div class="d-flex align-items-center">
                            <div class="header-icon-box me-3">
                                <Icon Name="IconName.Poll" Size="IconSize.ExtraLarge" />
                            </div>
                            <div>
                                <h2 class="mb-1 fw-bold text-white">@LH.Localize("NewSurvey")</h2>
                                <p class="text-white-50 mb-0">@LH.Localize("ManageYourSurveys")</p>
                            </div>
                        </div>
                    </Column>
                    <Column ColumnSize="ColumnSize.IsAuto">
                        <Button Color="Color.Primary"
                                Clicked="GoToCreatePage"
                                Class="px-4 btn-modern">
                            <Icon Name="IconName.Add" />
                            @LH.Localize("NewSurvey")
                        </Button>
                    </Column>
                </Row>
            </div>
        </div>

        <div class="px-4 pb-4">
            <DataGrid TItem="SurveyDto"
                  Data="Entities"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  PageSize="PageSize"
                  ShowFilterRow="true"
                  Striped="true"
                  Hoverable="true"
                  Responsive="true"
                  Class="border-0 modern-table">
            <DataGridColumns>
                <DataGridColumn TItem="SurveyDto" Field="@nameof(SurveyDto.Name)" Caption="@LH.Localize("SurveyName")" Sortable="true">
                    <DisplayTemplate Context="context">
                        <div class="d-flex align-items-center">
                            <Icon Name="IconName.File" Class="text-primary me-2" />
                            <strong>@context.Name</strong>
                        </div>
                    </DisplayTemplate>
                </DataGridColumn>
                <DataGridColumn TItem="SurveyDto" Field="@nameof(SurveyDto.Purpose)" Caption="@LH.Localize("Purpose")" Sortable="true">
                    <DisplayTemplate Context="context">
                        <span class="text-muted">@(context.Purpose?.Length > 50 ? context.Purpose.Substring(0, 50) + "..." : context.Purpose)</span>
                    </DisplayTemplate>
                </DataGridColumn>
                <DataGridColumn TItem="SurveyDto" Field="@nameof(SurveyDto.TargetAudience)" Caption="@LH.Localize("TargetAudience")" Sortable="true">
                    <DisplayTemplate Context="context">
                        <Badge Color="Color.Info">@context.TargetAudience</Badge>
                    </DisplayTemplate>
                </DataGridColumn>
                <DataGridColumn TItem="SurveyDto" Field="@nameof(SurveyDto.IsActive)" Caption="@LH.Localize("IsActive")" Sortable="true">
                    <DisplayTemplate Context="context">
                        @if (context.IsActive)
                        {
                            <Badge Color="Color.Success">
                                <Icon Name="IconName.Check" />
                                @LH.Localize("Active")
                            </Badge>
                        }
                        else
                        {
                            <Badge Color="Color.Secondary">
                                <Icon Name="IconName.Times" />
                                @LH.Localize("Inactive")
                            </Badge>
                        }
                    </DisplayTemplate>
                </DataGridColumn>

                <DataGridEntityActionsColumn TItem="SurveyDto" @ref="@EntityActionsColumn" Caption="@LH.Localize("Actions")" Width="180px">
                    <DisplayTemplate Context="context">
                        <EntityActions TItem="SurveyDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="SurveyDto"
                                          Text="@LH.Localize("ViewDetails")"
                                          Icon="IconName.Eye"
                                          Clicked="() => GoToDetailsPage(context.Id)" />
                            <EntityAction TItem="SurveyDto"
                                          Text="@LH.Localize("Edit")"
                                          Icon="IconName.Edit"
                                          Clicked="() => GoToEditPage(context.Id)" />
                            <EntityAction TItem="SurveyDto"
                                          Text="@LH.Localize("Delete")"
                                          Icon="IconName.Trash"
                                          Color="Color.Danger"
                                          Clicked="() => DeleteEntityAsync(context)"
                                          ConfirmationMessage="() => GetDeleteConfirmationMessage(context)" />
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
            </DataGridColumns>
        </DataGrid>
        </div>
    </div>
</div>

@code {
    private void GoToCreatePage()
    {
        NavigationManager.NavigateTo("/surveys/create");
    }

    private void GoToEditPage(Guid id)
    {
        NavigationManager.NavigateTo($"/surveys/{id}/edit");
    }

    private void GoToDetailsPage(Guid id)
    {
        NavigationManager.NavigateTo($"/surveys/{id}/details");
    }

    protected override string GetDeleteConfirmationMessage(SurveyDto entity)
    {
        return string.Format(LH.Localize("Error.ConfirmDeleteSurvey"), entity.Name);
    }
}
