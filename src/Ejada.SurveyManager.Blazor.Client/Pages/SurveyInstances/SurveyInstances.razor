@page "/survey-instances"
@using Volo.Abp.Application.Dtos
@using Ejada.SurveyManager.SurveyInstances
@using Ejada.SurveyManager.SurveyInstances.Dtos
@using Ejada.SurveyManager.SurveyInstances.Enums
@using Ejada.SurveyManager.Localization
@using Ejada.SurveyManager.Permissions
@using Microsoft.AspNetCore.Authorization
@using Volo.Abp.Identity
@inject NavigationManager NavigationManager
@inject ISurveyInstanceAppService SurveyInstanceService
@inject IIdentityUserAppService UserService
@inject Volo.Abp.AspNetCore.Components.Web.AbpBlazorMessageLocalizerHelper<SurveyManagerResource> LH
@inject IAuthorizationService AuthorizationService

@inherits AbpCrudPageBase<ISurveyInstanceAppService, SurveyInstanceDto, Guid, PagedAndSortedResultRequestDto, CreateSurveyInstanceDto, UpdateSurveyInstanceDto>

<div class="modern-page-wrapper">
    <div class="glass-card">
        <div class="gradient-header">
            <div class="gradient-header-content">
                <Row Class="align-items-center justify-content-between g-3">
                    <Column ColumnSize="ColumnSize.IsAuto">
                        <div class="d-flex align-items-center">
                            <div class="header-icon-box me-3">
                                <Icon Name="IconName.Clipboard" Size="IconSize.ExtraLarge" />
                            </div>
                            <div>
                                <h2 class="mb-1 fw-bold text-white">@LH.Localize("SurveyInstances")</h2>
                                <p class="text-white-50 mb-0">@LH.Localize("ManageSurveyAssignments")</p>
                            </div>
                        </div>
                    </Column>
                    <Column ColumnSize="ColumnSize.IsAuto">
                        <Button Color="Color.Primary"
                                Clicked="GoToCreatePage"
                                Class="px-4 btn-modern">
                            <Icon Name="IconName.UserPlus" />
                            @LH.Localize("AssignSurvey")
                        </Button>
                    </Column>
                </Row>
            </div>
        </div>

        <div class="px-4 pb-4">
            <DataGrid TItem="SurveyInstanceDto"
                  Data="Entities"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  PageSize="PageSize"
                  ShowFilterRow="true"
                  Striped="true"
                  Hoverable="true"
                  Responsive="true"
                  Class="border-0 modern-table">
            <DataGridColumns>
                <DataGridColumn TItem="SurveyInstanceDto" Field="@nameof(SurveyInstanceDto.SurveyName)" Caption="@LH.Localize("Survey")" Sortable="true">
                    <DisplayTemplate Context="context">
                        <div class="d-flex align-items-center">
                            <Icon Name="IconName.Poll" Class="text-primary me-2" />
                            <strong>@context.SurveyName</strong>
                        </div>
                    </DisplayTemplate>
                </DataGridColumn>
                <DataGridColumn TItem="SurveyInstanceDto" Field="@nameof(SurveyInstanceDto.AssigneeUserId)" Caption="@LH.Localize("AssigneeUser")" Sortable="true">
                    <DisplayTemplate Context="context">
                        <div class="d-flex align-items-center">
                            <Icon Name="IconName.User" Class="text-info me-2" />
                            <span>@GetUserEmail(context.AssigneeUserId)</span>
                        </div>
                    </DisplayTemplate>
                </DataGridColumn>
                <DataGridColumn TItem="SurveyInstanceDto" Field="@nameof(SurveyInstanceDto.DueDate)" Caption="@LH.Localize("DueDate")" Sortable="true">
                    <DisplayTemplate Context="context">
                        @if (context.DueDate.HasValue)
                        {
                            <div class="d-flex align-items-center">
                                <Icon Name="IconName.Calendar" Class="text-warning me-2" />
                                <span>@context.DueDate.Value.ToString("yyyy-MM-dd HH:mm")</span>
                            </div>
                        }
                        else
                        {
                            <Badge Color="Color.Secondary">@LH.Localize("NoDueDate")</Badge>
                        }
                    </DisplayTemplate>
                </DataGridColumn>
                <DataGridColumn TItem="SurveyInstanceDto" Field="@nameof(SurveyInstanceDto.Status)" Caption="@LH.Localize("Status")" Sortable="true">
                    <DisplayTemplate Context="context">
                        @switch (context.Status)
                        {
                            case SurveyInstanceStatus.Assigned:
                                <Badge Color="Color.Info">
                                    <Icon Name="IconName.Clock" />
                                    @LH.Localize("Assigned")
                                </Badge>
                                break;
                            case SurveyInstanceStatus.InProgress:
                                <Badge Color="Color.Warning">
                                    <Icon Name="IconName.Sync" />
                                    @LH.Localize("InProgress")
                                </Badge>
                                break;
                            case SurveyInstanceStatus.Submitted:
                                <Badge Color="Color.Success">
                                    <Icon Name="IconName.Check" />
                                    @LH.Localize("Submitted")
                                </Badge>
                                break;
                            case SurveyInstanceStatus.Expired:
                                <Badge Color="Color.Danger">
                                    <Icon Name="IconName.ExclamationTriangle" />
                                    @LH.Localize("Expired")
                                </Badge>
                                break;
                        }
                    </DisplayTemplate>
                </DataGridColumn>

                <DataGridEntityActionsColumn TItem="SurveyInstanceDto" @ref="@EntityActionsColumn" Caption="@LH.Localize("Actions")" Width="200px">
                    <DisplayTemplate Context="context">
                        <EntityActions TItem="SurveyInstanceDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="SurveyInstanceDto"
                                          Text="@LH.Localize("ViewResponses")"
                                          Icon="IconName.Eye"
                                          Visible="@(context.Status == SurveyInstanceStatus.Submitted && HasViewAllPermission)"
                                          Clicked="() => GoToDetailsPage(context.Id)" />
                            <EntityAction TItem="SurveyInstanceDto"
                                          Text="@LH.Localize("MarkAsExpired")"
                                          Icon="IconName.Ban"
                                          Color="Color.Warning"
                                          Visible="@(context.Status != SurveyInstanceStatus.Submitted && context.Status != SurveyInstanceStatus.Expired)"
                                          Clicked="() => MarkExpiredAsync(context.Id)"
                                          ConfirmationMessage="@(() => LH.Localize("MarkExpiredConfirmation"))" />
                            <EntityAction TItem="SurveyInstanceDto"
                                          Text="@LH.Localize("Delete")"
                                          Icon="IconName.Trash"
                                          Color="Color.Danger"
                                          Clicked="() => DeleteEntityAsync(context)"
                                          ConfirmationMessage="() => GetDeleteConfirmationMessage(context)" />
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
            </DataGridColumns>
        </DataGrid>
        </div>
    </div>
</div>

@code {
    private Dictionary<Guid, string> UserEmails = new Dictionary<Guid, string>();
    private bool HasViewAllPermission { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        HasViewAllPermission = await AuthorizationService.IsGrantedAsync(SurveyManagerPermissions.Responses.ViewAll);
        await LoadUsersAsync();
    }

    protected override async Task GetEntitiesAsync()
    {
        await base.GetEntitiesAsync();
        await LoadUsersAsync();
    }

    private async Task LoadUsersAsync()
    {
        // Get unique user IDs from current entities
        var userIds = Entities.Select(e => e.AssigneeUserId).Distinct().ToList();
        
        // Load user details for each ID
        foreach (var userId in userIds)
        {
            if (!UserEmails.ContainsKey(userId))
            {
                try
                {
                    var user = await UserService.GetAsync(userId);
                    UserEmails[userId] = user.Email ?? user.UserName;
                }
                catch
                {
                    UserEmails[userId] = "Unknown User";
                }
            }
        }
    }

    private string GetUserEmail(Guid userId)
    {
        return UserEmails.TryGetValue(userId, out var email) ? email : "Loading...";
    }

    private void GoToCreatePage()
    {
        NavigationManager.NavigateTo("/survey-instances/create");
    }

    private void GoToDetailsPage(Guid id)
    {
        NavigationManager.NavigateTo($"/survey-instances/{id}/details");
    }

    private async Task MarkExpiredAsync(Guid id)
    {
        await SurveyInstanceService.MarkExpiredAsync(id);
        await GetEntitiesAsync();
    }

    protected override string GetDeleteConfirmationMessage(SurveyInstanceDto entity)
    {
        return string.Format(LH.Localize("Error.ConfirmDeleteSurveyInstance"), entity.SurveyName);
    }
}

