@page "/answer-survey/{Id:guid}"
@using Ejada.SurveyManager.SurveyInstances
@using Ejada.SurveyManager.SurveyInstances.Dtos
@using Ejada.SurveyManager.SurveyInstances.Enums
@using Ejada.SurveyManager.Surveys.Enums
@using Ejada.SurveyManager.Localization
@using Ejada.SurveyManager.Blazor.Client.Pages.SurveyInstances.Components
@inject NavigationManager NavigationManager
@inject IResponseAppService ResponseService
@inject Volo.Abp.AspNetCore.Components.Web.AbpBlazorMessageLocalizerHelper<SurveyManagerResource> LH

@inherits AbpComponentBase

<div class="modern-page-wrapper">
    <div class="glass-card">
        <div class="gradient-header">
            <div class="gradient-header-content">
                <Row Class="align-items-center justify-content-between g-3">
                    <Column ColumnSize="ColumnSize.IsAuto">
                        <div class="d-flex align-items-center">
                            <div class="header-icon-box me-3">
                                <Icon Name="IconName.Clipboard" Size="IconSize.ExtraLarge" />
                            </div>
                            <div>
                                <h2 class="mb-1 fw-bold text-white">@(SurveyInstanceData?.SurveyName ?? LH.Localize("AnswerSurvey"))</h2>
                                <p class="text-white-50 mb-0">@LH.Localize("AnswerAssignedSurveyQuestions")</p>
                            </div>
                        </div>
                    </Column>
                    <Column ColumnSize="ColumnSize.IsAuto">
                        <Button Color="Color.Secondary" Outline Clicked="Back" Class="btn-light">
                            <Icon Name="IconName.ArrowLeft" />
                            @LH.Localize("Back")
                        </Button>
                    </Column>
                </Row>
            </div>
        </div>

        <div class="px-4 pb-4">
        @if (SurveyInstanceData == null)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">@LH.Localize("Loading")</span>
                </div>
                <p class="mt-3 text-muted">@LH.Localize("Loading")</p>
            </div>
        }
        else if (IsReadOnly)
        {
            <Alert Color="Color.Info" Visible="true" Class="mb-4">
                <Icon Name="IconName.InfoCircle" Class="me-2" />
                @LH.Localize("Error.SurveySubmittedOrExpired")
            </Alert>

            @if (!SurveyInstanceData.Questions.Any())
            {
                <Alert Color="Color.Info" Visible="true">
                    <Icon Name="IconName.InfoCircle" Class="me-2" />
                    @LH.Localize("NoQuestionsInThisSurvey")
                </Alert>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var question in SurveyInstanceData.Questions)
                    {
                        <Column ColumnSize="ColumnSize.Is12" @key="question">
                            <Card Class="h-100 border shadow-sm">
                                <CardBody Class="p-4">
                                    <div class="d-flex align-items-start mb-3">
                                        <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <span class="fw-bold text-primary">@(SurveyInstanceData.Questions.IndexOf(question) + 1)</span>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h5 class="mb-2 fw-semibold">@question.Text</h5>
                                            <Badge Color="Color.Secondary">@question.Type</Badge>
                                        </div>
                                    </div>

                                    @if (question.Type == QuestionType.Likert1To5 || question.Type == QuestionType.Likert1To7)
                                    {
                                        <LikertQuestion Question="@question" IsReadOnly="true" />
                                    }
                                    else if (question.Type == QuestionType.SingleChoice)
                                    {
                                        <SingleChoiceQuestion Question="@question" IsReadOnly="true" />
                                    }
                                    else if (question.Type == QuestionType.MultiChoice)
                                    {
                                        <MultiChoiceQuestion Question="@question" IsReadOnly="true" />
                                    }
                                </CardBody>
                            </Card>
                        </Column>
                    }
                </div>
            }
        }
        else
        {
            @if (SurveyInstanceData.DueDate.HasValue)
            {
                var timeLeft = SurveyInstanceData.DueDate.Value - DateTime.UtcNow;
                @if (timeLeft.TotalDays < 1 && timeLeft.TotalHours > 0)
                {
                    <Alert Color="Color.Warning" Visible="true" Class="mb-4">
                        <Icon Name="IconName.ExclamationTriangle" Class="me-2" />
                        <strong>@LH.Localize("DueSoon"):</strong> @SurveyInstanceData.DueDate.Value.ToString("yyyy-MM-dd HH:mm")
                    </Alert>
                }
            }

            @if (!SurveyInstanceData.Questions.Any())
            {
                <Alert Color="Color.Info" Visible="true">
                    <Icon Name="IconName.InfoCircle" Class="me-2" />
                    @LH.Localize("NoQuestionsInThisSurvey")
                </Alert>
            }
            else
            {
                <div class="row g-4 mb-4">
                    @foreach (var question in SurveyInstanceData.Questions)
                    {
                        <Column ColumnSize="ColumnSize.Is12" @key="question">
                            <Card Class="h-100 border shadow-sm">
                                <CardBody Class="p-4">
                                    <div class="d-flex align-items-start mb-3">
                                        <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <span class="fw-bold text-primary">@(SurveyInstanceData.Questions.IndexOf(question) + 1)</span>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h5 class="mb-2 fw-semibold">@question.Text</h5>
                                            <Badge Color="Color.Secondary">@question.Type</Badge>
                                        </div>
                                    </div>

                                    @if (question.Type == QuestionType.Likert1To5 || question.Type == QuestionType.Likert1To7)
                                    {
                                        <LikertQuestion Question="@question" IsReadOnly="false" />
                                    }
                                    else if (question.Type == QuestionType.SingleChoice)
                                    {
                                        <SingleChoiceQuestion Question="@question" IsReadOnly="false" />
                                    }
                                    else if (question.Type == QuestionType.MultiChoice)
                                    {
                                        <MultiChoiceQuestion Question="@question" IsReadOnly="false" />
                                    }
                                </CardBody>
                            </Card>
                        </Column>
                    }
                </div>
            }

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                <Button Color="Color.Primary" Outline Clicked="Back">
                    <Icon Name="IconName.Times" />
                    @LH.Localize("Cancel")
                </Button>

                <div>
                    <Button Color="Color.Info"
                            Outline
                            Clicked="SaveDraftAsync"
                            Disabled="@IsSaving"
                            Class="me-2">
                        @if (IsSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        else
                        {
                            <Icon Name="IconName.Save" Class="me-1" />
                        }
                        @LH.Localize("SaveDraft")
                    </Button>

                    <Button Color="Color.Success"
                            Clicked="SubmitSurveyAsync"
                            Disabled="@IsSaving"
                            Class="px-4 btn-modern">
                        @if (IsSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        else
                        {
                            <Icon Name="IconName.Check" Class="me-1" />
                        }
                        @LH.Localize("Submit")
                    </Button>
                </div>
            </div>
        }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Guid Id { get; set; }

    private SurveyInstanceForAnsweringDto? SurveyInstanceData { get; set; }
    private bool IsSaving { get; set; } = false;
    private bool IsReadOnly => SurveyInstanceData?.Status == SurveyInstanceStatus.Submitted || 
                                SurveyInstanceData?.Status == SurveyInstanceStatus.Expired;

    protected override async Task OnParametersSetAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        SurveyInstanceData = await ResponseService.GetSurveyInstanceForAnsweringAsync(Id);
    }

    private async Task SaveDraftAsync()
    {
        if (SurveyInstanceData == null) return;

        IsSaving = true;
        try
        {
            var dto = new SaveResponsesBulkDto
            {
                SurveyInstanceId = Id,
                Responses = SurveyInstanceData.Questions.Select(q => new SaveResponseDto
                {
                    SurveyInstanceId = Id,
                    QuestionId = q.Id,
                    AnswerValue = q.AnswerValue,
                    SelectedOptionIds = q.SelectedOptionIds.Any() ? q.SelectedOptionIds : null
                }).ToList()
            };

            await ResponseService.SaveResponsesBulkAsync(dto);
            
            // Reload to show updated status
            await LoadDataAsync();
        }
        finally
        {
            IsSaving = false;
        }
    }

    private async Task SubmitSurveyAsync()
    {
        if (SurveyInstanceData == null) return;

        IsSaving = true;
        try
        {
            var dto = new SaveResponsesBulkDto
            {
                SurveyInstanceId = Id,
                Responses = SurveyInstanceData.Questions.Select(q => new SaveResponseDto
                {
                    SurveyInstanceId = Id,
                    QuestionId = q.Id,
                    AnswerValue = q.AnswerValue,
                    SelectedOptionIds = q.SelectedOptionIds.Any() ? q.SelectedOptionIds : null
                }).ToList()
            };

            await ResponseService.SaveAndSubmitResponsesBulkAsync(dto);
            
            NavigationManager.NavigateTo("/my-surveys");
        }
        finally
        {
            IsSaving = false;
        }
    }

    private void Back()
    {
        NavigationManager.NavigateTo("/my-surveys");
    }
}

