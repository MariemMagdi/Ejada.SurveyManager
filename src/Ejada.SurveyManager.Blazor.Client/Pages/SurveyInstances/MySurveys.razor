@page "/my-surveys"
@using Volo.Abp.Application.Dtos
@using Ejada.SurveyManager.SurveyInstances
@using Ejada.SurveyManager.SurveyInstances.Dtos
@using Ejada.SurveyManager.SurveyInstances.Enums
@using Ejada.SurveyManager.Localization
@using Ejada.SurveyManager.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(SurveyManagerPermissions.SurveyInstances.ViewOwn)]
@inject NavigationManager NavigationManager
@inject ISurveyInstanceAppService SurveyInstanceService
@inject Volo.Abp.AspNetCore.Components.Web.AbpBlazorMessageLocalizerHelper<SurveyManagerResource> LH

@inherits AbpCrudPageBase<ISurveyInstanceAppService, SurveyInstanceDto, Guid, PagedAndSortedResultRequestDto, CreateSurveyInstanceDto, UpdateSurveyInstanceDto>

<div class="modern-page-wrapper">
    <div class="glass-card">
        <div class="gradient-header">
            <div class="gradient-header-content">
                <div class="d-flex align-items-center">
                    <div class="header-icon-box me-3">
                        <Icon Name="IconName.List" Size="IconSize.ExtraLarge" />
                    </div>
                    <div>
                        <h2 class="mb-1 fw-bold text-white">@LH.Localize("MyAssignedSurveys")</h2>
                        <p class="text-white-50 mb-0">@LH.Localize("ViewAndManageYourAssignedSurveys")</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="px-4 pb-4">
            <DataGrid TItem="SurveyInstanceDto"
                  Data="Entities"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  PageSize="PageSize"
                  ShowFilterRow="true"
                  Striped="true"
                  Hoverable="true"
                  Responsive="true"
                  Class="border-0 modern-table">
            <DataGridColumns>
                <DataGridColumn TItem="SurveyInstanceDto" Field="@nameof(SurveyInstanceDto.SurveyName)" Caption="@LH.Localize("Survey")" Sortable="true">
                    <DisplayTemplate Context="context">
                        <div class="d-flex align-items-center">
                            <Icon Name="IconName.Poll" Class="text-primary me-2" />
                            <strong>@context.SurveyName</strong>
                        </div>
                    </DisplayTemplate>
                </DataGridColumn>
                <DataGridColumn TItem="SurveyInstanceDto" Field="@nameof(SurveyInstanceDto.DueDate)" Caption="@LH.Localize("DueDate")" Sortable="true">
                    <DisplayTemplate Context="context">
                        @if (context.DueDate.HasValue)
                        {
                            var daysLeft = (context.DueDate.Value - DateTime.UtcNow).TotalDays;
                            var iconClass = daysLeft < 0 ? "text-danger" : daysLeft < 1 ? "text-warning" : "text-info";
                            <div class="d-flex align-items-center">
                                <Icon Name="IconName.Calendar" Class="@($"me-2 {iconClass}")" />
                                <span class="@(daysLeft < 0 ? "text-danger" : daysLeft < 1 ? "text-warning" : "")">
                                    @context.DueDate.Value.ToString("yyyy-MM-dd HH:mm")
                                    @if (daysLeft < 0)
                                    {
                                        <Badge Color="Color.Danger" Class="ms-2">@LH.Localize("Overdue")</Badge>
                                    }
                                    else if (daysLeft < 1)
                                    {
                                        <Badge Color="Color.Warning" Class="ms-2">@LH.Localize("DueSoon")</Badge>
                                    }
                                </span>
                            </div>
                        }
                        else
                        {
                            <Badge Color="Color.Secondary">@LH.Localize("NoDueDate")</Badge>
                        }
                    </DisplayTemplate>
                </DataGridColumn>
                <DataGridColumn TItem="SurveyInstanceDto" Field="@nameof(SurveyInstanceDto.Status)" Caption="@LH.Localize("Status")" Sortable="true">
                    <DisplayTemplate Context="context">
                        @switch (context.Status)
                        {
                            case SurveyInstanceStatus.Assigned:
                                <Badge Color="Color.Info">
                                    <Icon Name="IconName.Clock" />
                                    @LH.Localize("NotStarted")
                                </Badge>
                                break;
                            case SurveyInstanceStatus.InProgress:
                                <Badge Color="Color.Warning">
                                    <Icon Name="IconName.Sync" />
                                    @LH.Localize("Draft")
                                </Badge>
                                break;
                            case SurveyInstanceStatus.Submitted:
                                <Badge Color="Color.Success">
                                    <Icon Name="IconName.Check" />
                                    @LH.Localize("Submitted")
                                </Badge>
                                break;
                            case SurveyInstanceStatus.Expired:
                                <Badge Color="Color.Danger">
                                    <Icon Name="IconName.ExclamationTriangle" />
                                    @LH.Localize("Expired")
                                </Badge>
                                break;
                        }
                    </DisplayTemplate>
                </DataGridColumn>

                <DataGridEntityActionsColumn TItem="SurveyInstanceDto" @ref="@EntityActionsColumn" Caption="@LH.Localize("Actions")" Width="150px">
                    <DisplayTemplate Context="context">
                        <EntityActions TItem="SurveyInstanceDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="SurveyInstanceDto"
                                          Text="@(context.Status == SurveyInstanceStatus.Submitted ? LH.Localize("ViewResponses") : LH.Localize("AnswerSurvey"))"
                                          Icon="@(context.Status == SurveyInstanceStatus.Submitted ? "IconName.Eye" : "IconName.Edit")"
                                          Clicked="() => GoToAnswerPage(context.Id)" />
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
            </DataGridColumns>
        </DataGrid>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        
        // Filter to show only surveys assigned to current user
        await GetEntitiesAsync();
    }

    protected override async Task OnDataGridReadAsync(DataGridReadDataEventArgs<SurveyInstanceDto> e)
    {
        CurrentSorting = e.Columns
            .Where(c => c.SortDirection != SortDirection.Default)
            .Select(c => c.Field + (c.SortDirection == SortDirection.Descending ? " DESC" : ""))
            .JoinAsString(",");
        CurrentPage = e.Page;

        await GetEntitiesAsync();

        await InvokeAsync(StateHasChanged);
    }

    protected override async Task GetEntitiesAsync()
    {
        try
        {
            await UpdateGetListInputAsync();
            // Use the dedicated method for employees to get their own surveys
            var result = await AppService.GetMyAssignedSurveysAsync(GetListInput);
            
            Entities = result.Items.ToList();
            TotalCount = (int)result.TotalCount;
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
        }
    }

    private void GoToAnswerPage(Guid id)
    {
        NavigationManager.NavigateTo($"/answer-survey/{id}");
    }
}

