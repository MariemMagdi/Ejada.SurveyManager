@page "/survey-instances/{Id:guid}/details"
@using Ejada.SurveyManager.SurveyInstances
@using Ejada.SurveyManager.SurveyInstances.Dtos
@using Ejada.SurveyManager.SurveyInstances.Enums
@using Ejada.SurveyManager.Surveys.Enums
@using Ejada.SurveyManager.Localization
@using Ejada.SurveyManager.Permissions
@using Microsoft.AspNetCore.Authorization
@using Volo.Abp.Identity
@inject NavigationManager NavigationManager
@inject IResponseAppService ResponseService
@inject ISurveyInstanceAppService SurveyInstanceService
@inject IIdentityUserAppService UserService
@inject Volo.Abp.AspNetCore.Components.Web.AbpBlazorMessageLocalizerHelper<SurveyManagerResource> LH

@inherits AbpComponentBase
@attribute [Authorize(SurveyManagerPermissions.SurveyInstances.ViewAll)]

<div class="modern-page-wrapper">
    <div class="glass-card">
        <div class="gradient-header">
            <div class="gradient-header-content">
                <Row Class="align-items-center justify-content-between g-3">
                    <Column ColumnSize="ColumnSize.IsAuto">
                        <div class="d-flex align-items-center">
                            <div class="header-icon-box me-3">
                                <Icon Name="IconName.Eye" Size="IconSize.ExtraLarge" />
                            </div>
                            <div>
                                <h2 class="mb-1 fw-bold text-white">@LH.Localize("SurveyInstanceDetails")</h2>
                                <p class="text-white-50 mb-0">@LH.Localize("ViewSurveyResponsesAndAnswers")</p>
                            </div>
                        </div>
                    </Column>
                    <Column ColumnSize="ColumnSize.IsAuto">
                        <Button Color="Color.Secondary" Outline Clicked="Back" Class="btn-light">
                            <Icon Name="IconName.ArrowLeft" />
                            @LH.Localize("Back")
                        </Button>
                    </Column>
                </Row>
            </div>
        </div>

        <div class="px-4 pb-4">
        @if (SurveyInstanceData == null)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">@LH.Localize("Loading")</span>
                </div>
                <p class="mt-3 text-muted">@LH.Localize("Loading")</p>
            </div>
        }
        else
        {
            <!-- Instance Information -->
            <div class="dashboard-card mb-4">
                <div class="dashboard-card-header">
                    <h5 class="dashboard-card-title">
                        <Icon Name="IconName.InfoCircle" Class="text-primary me-2" />
                        @LH.Localize("AssignmentInformation")
                    </h5>
                </div>
                <div class="dashboard-card-body">
                    <Row Class="g-3">
                        <Column ColumnSize="ColumnSize.Is6">
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase fw-semibold">@LH.Localize("Survey")</label>
                                <div class="d-flex align-items-center">
                                    <Icon Name="IconName.Poll" Class="text-primary me-2" />
                                    <strong>@SurveyInstanceData.SurveyName</strong>
                                </div>
                            </div>
                        </Column>
                        <Column ColumnSize="ColumnSize.Is6">
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase fw-semibold">@LH.Localize("Status")</label>
                                <div>
                                    @switch (SurveyInstanceData.Status)
                                    {
                                        case SurveyInstanceStatus.Assigned:
                                            <Badge Color="Color.Info">
                                                <Icon Name="IconName.Clock" />
                                                @LH.Localize("Assigned")
                                            </Badge>
                                            break;
                                        case SurveyInstanceStatus.InProgress:
                                            <Badge Color="Color.Warning">
                                                <Icon Name="IconName.Sync" />
                                                @LH.Localize("InProgress")
                                            </Badge>
                                            break;
                                        case SurveyInstanceStatus.Submitted:
                                            <Badge Color="Color.Success">
                                                <Icon Name="IconName.Check" />
                                                @LH.Localize("Submitted")
                                            </Badge>
                                            break;
                                        case SurveyInstanceStatus.Expired:
                                            <Badge Color="Color.Danger">
                                                <Icon Name="IconName.ExclamationTriangle" />
                                                @LH.Localize("Expired")
                                            </Badge>
                                            break;
                                    }
                                </div>
                            </div>
                        </Column>
                        <Column ColumnSize="ColumnSize.Is6">
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase fw-semibold">@LH.Localize("AssignedTo")</label>
                                <div class="d-flex align-items-center">
                                    <Icon Name="IconName.User" Class="text-info me-2" />
                                    <span>@AssigneeUserEmail</span>
                                </div>
                            </div>
                        </Column>
                        <Column ColumnSize="ColumnSize.Is6">
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase fw-semibold">@LH.Localize("DueDate")</label>
                                <div class="d-flex align-items-center">
                                    <Icon Name="IconName.Calendar" Class="text-warning me-2" />
                                    @if (SurveyInstanceData.DueDate.HasValue)
                                    {
                                        <span>@SurveyInstanceData.DueDate.Value.ToString("yyyy-MM-dd HH:mm")</span>
                                    }
                                    else
                                    {
                                        <Badge Color="Color.Secondary">@LH.Localize("NoDueDate")</Badge>
                                    }
                                </div>
                            </div>
                        </Column>
                    </Row>
                </div>
            </div>

            <!-- Responses Section -->
            <div class="dashboard-card mb-4">
                <div class="dashboard-card-header">
                    <h5 class="dashboard-card-title">
                        <Icon Name="IconName.Clipboard" Class="text-primary me-2" />
                        @LH.Localize("Responses")
                    </h5>
                </div>
                <div class="dashboard-card-body">

                    @if (!SurveyInstanceData.Questions.Any())
                    {
                        <Alert Color="Color.Info" Visible="true">
                            <Icon Name="IconName.InfoCircle" Class="me-2" />
                            @LH.Localize("NoQuestionsInThisSurvey")
                        </Alert>
                    }
                    else if (SurveyInstanceData.Status == SurveyInstanceStatus.Assigned)
                    {
                        <Alert Color="Color.Warning" Visible="true">
                            <Icon Name="IconName.ExclamationTriangle" Class="me-2" />
                            @LH.Localize("EmployeeHasNotStartedThisSurveyYet")
                        </Alert>
                    }
                    else
                    {
                        <div class="row g-3">
                            @foreach (var question in SurveyInstanceData.Questions)
                            {
                                <Column ColumnSize="ColumnSize.Is12" @key="question">
                                    <Card Class="h-100 border">
                                        <CardBody>
                                            <div class="d-flex align-items-start mb-3">
                                                <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                    <span class="fw-bold text-primary">@(SurveyInstanceData.Questions.IndexOf(question) + 1)</span>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-2 fw-semibold">@question.Text</h6>
                                                    <Badge Color="Color.Secondary">@question.Type.ToString()</Badge>
                                                </div>
                                            </div>

                                            @if (question.Type == QuestionType.Likert1To5 || question.Type == QuestionType.Likert1To7)
                                            {
                                                @if (question.AnswerValue.HasValue)
                                                {
                                                    <Alert Color="Color.Success" Visible>
                                                        <Icon Name="IconName.Check" Class="me-2" />
                                                        <strong>@LH.Localize("Answer"):</strong> @question.AnswerValue.Value / @(question.Type == QuestionType.Likert1To5 ? 5 : 7)
                                                    </Alert>
                                                }
                                                else
                                                {
                                                    <Alert Color="Color.Secondary" Visible>
                                                        <Icon Name="IconName.Times" Class="me-2" />
                                                        @LH.Localize("NotAnswered")
                                                    </Alert>
                                                }
                                            }
                                            else if (question.Type == QuestionType.SingleChoice || question.Type == QuestionType.MultiChoice)
                                            {
                                                @if (question.SelectedOptionIds.Any())
                                                {
                                                    <Alert Color="Color.Success" Visible>
                                                        <Icon Name="IconName.Check" Class="me-2" />
                                                        <strong>@LH.Localize("SelectedOptions"):</strong>
                                                        <ul class="mb-0 mt-2">
                                                            @foreach (var optionId in question.SelectedOptionIds)
                                                            {
                                                                var option = question.Options.FirstOrDefault(o => o.Id == optionId);
                                                                if (option != null)
                                                                {
                                                                    <li>@option.Label</li>
                                                                }
                                                            }
                                                        </ul>
                                                    </Alert>
                                                }
                                                else
                                                {
                                                    <Alert Color="Color.Secondary" Visible>
                                                        <Icon Name="IconName.Times" Class="me-2" />
                                                        @LH.Localize("NotAnswered")
                                                    </Alert>
                                                }

                                                @if (question.Options.Any())
                                                {
                                                    <div class="mt-3">
                                                        <small class="text-muted d-block mb-2">@LH.Localize("AvailableOptions"):</small>
                                                        <ul class="small">
                                                            @foreach (var option in question.Options)
                                                            {
                                                                <li>@option.Label</li>
                                                            }
                                                        </ul>
                                                    </div>
                                                }
                                            }
                                        </CardBody>
                                    </Card>
                                </Column>
                            }
                        </div>
                    }
                </div>
            </div>
        }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Guid Id { get; set; }

    private SurveyInstanceForAnsweringDto? SurveyInstanceData { get; set; }
    private string AssigneeUserEmail { get; set; } = "Loading...";

    protected override async Task OnParametersSetAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        SurveyInstanceData = await ResponseService.GetSurveyInstanceForAnsweringAsync(Id);
        
        // Load user email
        if (SurveyInstanceData != null)
        {
            try
            {
                var user = await UserService.GetAsync(SurveyInstanceData.AssigneeUserId);
                AssigneeUserEmail = user.Email ?? user.UserName;
            }
            catch
            {
                AssigneeUserEmail = "Unknown User";
            }
        }
    }

    private void Back()
    {
        NavigationManager.NavigateTo("/survey-instances");
    }
}

