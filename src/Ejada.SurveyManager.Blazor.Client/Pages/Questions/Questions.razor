@page "/questions"
@using Volo.Abp.Application.Dtos
@using Ejada.SurveyManager.Surveys
@using Ejada.SurveyManager.Surveys.Dtos
@using Ejada.SurveyManager.Localization
@inject NavigationManager NavigationManager
@inject IQuestionAppService QuestionService
@inject Volo.Abp.AspNetCore.Components.Web.AbpBlazorMessageLocalizerHelper<SurveyManagerResource> LH

@inherits AbpCrudPageBase<IQuestionAppService, QuestionDto, Guid, PagedAndSortedResultRequestDto, CreateQuestionDto, UpdateQuestionDto>

<Card Class="shadow-sm">
    <CardHeader Class="bg-white border-bottom">
        <Row Class="align-items-center justify-content-between g-3">
            <Column ColumnSize="ColumnSize.IsAuto">
                <div class="d-flex align-items-center">
                    <Icon Name="IconName.QuestionCircle" Class="text-primary me-2" Size="IconSize.Large" />
                    <div>
                        <h4 class="mb-0 fw-bold">@L["Questions"]</h4>
                        <small class="text-muted">@L["Manage your questions"]</small>
                    </div>
                </div>
            </Column>
            <Column ColumnSize="ColumnSize.IsAuto">
                <Button Color="Color.Primary"
                        Clicked="GoToCreatePage"
                        Class="px-4">
                    <Icon Name="IconName.Add" />
                    @L["New Question"]
                </Button>
            </Column>
        </Row>
    </CardHeader>

    <CardBody Class="p-0">
        <DataGrid TItem="QuestionDto"
                  Data="Entities"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  PageSize="PageSize"
                  ShowFilterRow="true"
                  Striped="true"
                  Hoverable="true"
                  Responsive="true"
                  Class="border-0">
            <DataGridColumns>
                <DataGridColumn TItem="QuestionDto" Field="@nameof(QuestionDto.Text)" Caption="@L["Question Text"]" Sortable="true">
                    <DisplayTemplate Context="context">
                        <div class="d-flex align-items-center">
                            <Icon Name="IconName.File" Class="text-info me-2" />
                            <span>@(context.Text?.Length > 60 ? context.Text.Substring(0, 60) + "..." : context.Text)</span>
                        </div>
                    </DisplayTemplate>
                </DataGridColumn>
                <DataGridColumn TItem="QuestionDto" Caption="@L["Question Type"]" Sortable="true">
                    <DisplayTemplate Context="context">
                        <Badge Color="Color.Primary">@context.Type.ToString()</Badge>
                    </DisplayTemplate>
                </DataGridColumn>
                <DataGridColumn TItem="QuestionDto" Caption="@L["Options"]" Sortable="true">
                    <DisplayTemplate Context="context">
                        <Badge Color="Color.Info">
                            <Icon Name="IconName.List" />
                            @(context.Options?.Count ?? 0) @L["Options"]
                        </Badge>
                    </DisplayTemplate>
                </DataGridColumn>
                <DataGridColumn TItem="QuestionDto" Caption="@L["Status"]" Sortable="true">
                    <DisplayTemplate Context="context">
                        @if (context.IsLinkedToSurvey)
                        {
                            <Badge Color="Color.Warning">
                                <Icon Name="IconName.Link" />
                                @L["Linked to survey"]
                            </Badge>
                        }
                        else
                        {
                            <Badge Color="Color.Success">
                                <Icon Name="IconName.Edit" />
                                @L["Editable"]
                            </Badge>
                        }
                    </DisplayTemplate>
                </DataGridColumn>

                <DataGridEntityActionsColumn TItem="QuestionDto" @ref="@EntityActionsColumn" Caption="@L["Actions"]" Width="180px">
                    <DisplayTemplate Context="context">
                        <EntityActions TItem="QuestionDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="QuestionDto"
                                          Text="@L["ViewDetails"]"
                                          Icon="IconName.Eye"
                                          Clicked="() => GoToDetailsPage(context.Id)" />
                            <EntityAction TItem="QuestionDto"
                                          Text="@L["Edit"]"
                                          Icon="IconName.Edit"
                                          Visible="@(!context.IsLinkedToSurvey)"
                                          Clicked="() => GoToEditPage(context.Id)" />
                            <EntityAction TItem="QuestionDto"
                                          Text="@L["Delete"]"
                                          Icon="IconName.Trash"
                                          Color="Color.Danger"
                                          Visible="@(!context.IsLinkedToSurvey)"
                                          Clicked="() => DeleteEntityAsync(context)"
                                          ConfirmationMessage="() => GetDeleteConfirmationMessage(context)" />
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
            </DataGridColumns>
        </DataGrid>
    </CardBody>
</Card>

@code {
    private void GoToCreatePage()
    {
        NavigationManager.NavigateTo("/questions/create");
    }

    private void GoToEditPage(Guid id)
    {
        NavigationManager.NavigateTo($"/questions/{id}/edit");
    }

    private void GoToDetailsPage(Guid id)
    {
        NavigationManager.NavigateTo($"/questions/{id}/details");
    }

    protected override string GetDeleteConfirmationMessage(QuestionDto entity)
    {
        return string.Format(L["Are you sure you want to delete the question '{0}'?"], entity.Text);
    }
}