@page "/questions/{Id:guid}/details"
@using System.Linq
@using Ejada.SurveyManager.Surveys
@using Ejada.SurveyManager.Surveys.Dtos
@using Ejada.SurveyManager.Indicators
@using Ejada.SurveyManager.Indicators.Dtos
@using Ejada.SurveyManager.Localization
@using Volo.Abp.Application.Dtos
@inject NavigationManager NavigationManager
@inject IQuestionAppService QuestionService
@inject IIndicatorAppService IndicatorAppService
@inject Volo.Abp.AspNetCore.Components.Web.AbpBlazorMessageLocalizerHelper<SurveyManagerResource> LH

@inherits AbpCrudPageBase<IQuestionAppService, QuestionDto, Guid, PagedAndSortedResultRequestDto, CreateQuestionDto, UpdateQuestionDto>

<div class="modern-page-wrapper">
    <div class="glass-card">
        <div class="gradient-header">
            <div class="gradient-header-content">
                <Row Class="align-items-center justify-content-between g-3">
                    <Column ColumnSize="ColumnSize.IsAuto">
                        <div class="d-flex align-items-center">
                            <div class="header-icon-box me-3">
                                <Icon Name="IconName.Eye" Size="IconSize.ExtraLarge" />
                            </div>
                            <div>
                                <h2 class="mb-1 fw-bold text-white">@LH.Localize("QuestionDetails")</h2>
                                <p class="text-white-50 mb-0">@LH.Localize("ViewQuestionDetails")</p>
                            </div>
                        </div>
                    </Column>
                    <Column ColumnSize="ColumnSize.IsAuto">
                        <Button Color="Color.Secondary" Outline Clicked="Back" Class="btn-light">
                            <Icon Name="IconName.ArrowLeft" />
                            @LH.Localize("Back")
                        </Button>
                    </Column>
                </Row>
            </div>
        </div>

        <div class="px-4 pb-4">
        @if (Question == null)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">@LH.Localize("Loading")</span>
                </div>
                <p class="mt-3 text-muted">@LH.Localize("Loading")</p>
            </div>
        }
        else
        {
            <!-- Question Information -->
            <div class="dashboard-card mb-4">
                <div class="dashboard-card-header">
                    <h5 class="dashboard-card-title">
                        <Icon Name="IconName.InfoCircle" Class="text-primary me-2" />
                        @LH.Localize("QuestionInformation")
                    </h5>
                </div>
                <div class="dashboard-card-body">
                    <Row Class="g-3">
                        <Column ColumnSize="ColumnSize.Is12">
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase fw-semibold">@LH.Localize("QuestionText")</label>
                                <div class="d-flex align-items-center">
                                    <Icon Name="IconName.File" Class="text-info me-2" />
                                    <h5 class="mb-0">@Question.Text</h5>
                                </div>
                            </div>
                        </Column>
                        <Column ColumnSize="ColumnSize.Is6">
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase fw-semibold">@LH.Localize("QuestionType")</label>
                                <div>
                                    <Badge Color="Color.Primary">@Question.Type</Badge>
                                </div>
                            </div>
                        </Column>
                    </Row>
                </div>
            </div>

            <!-- Options Section -->
            @if (Question.Options != null && Question.Options.Any())
            {
                <div class="dashboard-card mb-4">
                    <div class="dashboard-card-header">
                        <h5 class="dashboard-card-title">
                            <Icon Name="IconName.List" Class="text-primary me-2" />
                            @LH.Localize("Options")
                        </h5>
                    </div>
                    <div class="dashboard-card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var option in Question.Options)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <div class="d-flex align-items-center">
                                        <Icon Name="IconName.Circle" Class="text-secondary me-2" />
                                        <span>@option.Label</span>
                                    </div>
                                    <Badge Color="Color.Info">@option.Type</Badge>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Linked Indicators -->
            <div class="dashboard-card mb-4">
                <div class="dashboard-card-header">
                    <h5 class="dashboard-card-title">
                        <Icon Name="IconName.ChartLine" Class="text-primary me-2" />
                        @LH.Localize("LinkedIndicators")
                    </h5>
                </div>
                <div class="dashboard-card-body">
                    @if (LinkedIndicators != null && LinkedIndicators.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var indicator in LinkedIndicators)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <div>
                                        <strong>@indicator.Name</strong>
                                        @if (!string.IsNullOrEmpty(indicator.Description))
                                        {
                                            <div class="text-muted small">@indicator.Description</div>
                                        }
                                    </div>
                                    @if (indicator.IsActive)
                                    {
                                        <Badge Color="Color.Success">
                                            <Icon Name="IconName.Check" />
                                            @LH.Localize("Active")
                                        </Badge>
                                    }
                                    else
                                    {
                                        <Badge Color="Color.Secondary">
                                            <Icon Name="IconName.Times" />
                                            @LH.Localize("Inactive")
                                        </Badge>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <Alert Color="Color.Info" Visible>
                            <Icon Name="IconName.InfoCircle" Class="me-2" />
                            @LH.Localize("NoIndicatorsLinkedToThisQuestion")
                        </Alert>
                    }
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                <Button Color="Color.Primary" Outline Clicked="Back">
                    <Icon Name="IconName.ArrowLeft" />
                    @LH.Localize("Back")
                </Button>

                <Button Color="Color.Primary" Clicked="Edit" Class="btn-modern">
                    <Icon Name="IconName.Edit" />
                    @LH.Localize("Edit")
                </Button>
            </div>
        }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Guid Id { get; set; }

    private QuestionDto? Question { get; set; }
    private List<IndicatorDto> LinkedIndicators { get; set; } = new();

    protected override async Task OnParametersSetAsync()
    {
        Question = await QuestionService.GetAsync(Id);
        
        // Load linked indicators
        if (Question.IndicatorIds != null && Question.IndicatorIds.Any())
        {
            var allIndicators = await IndicatorAppService.GetListAsync(new PagedAndSortedResultRequestDto { MaxResultCount = 1000 });
            LinkedIndicators = allIndicators.Items.Where(i => Question.IndicatorIds.Contains(i.Id)).ToList();
        }
        else
        {
            LinkedIndicators = new List<IndicatorDto>();
        }
    }

    private void Back()
    {
        NavigationManager.NavigateTo("/questions");
    }

    private void Edit()
    {
        NavigationManager.NavigateTo($"/questions/{Id}/edit");
    }
}

