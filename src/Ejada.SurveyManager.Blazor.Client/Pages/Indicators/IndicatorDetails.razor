@page "/indicators/{Id:guid}/details"
@using Ejada.SurveyManager.Indicators
@using Ejada.SurveyManager.Indicators.Dtos
@using Ejada.SurveyManager.Surveys
@using Ejada.SurveyManager.Surveys.Dtos
@using Ejada.SurveyManager.SurveyInstances
@using Ejada.SurveyManager.SurveyInstances.Dtos
@using Ejada.SurveyManager.Surveys.Enums
@using Ejada.SurveyManager.Localization
@using Ejada.SurveyManager.Permissions
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Microsoft.Extensions.Configuration
@using Volo.Abp.Application.Dtos
@inject IIndicatorAppService IndicatorAppService
@inject IQuestionAppService QuestionAppService
@inject IResponseAppService ResponseAppService
@inject NavigationManager NavigationManager
@inject Volo.Abp.AspNetCore.Components.Web.AbpBlazorMessageLocalizerHelper<SurveyManagerResource> LH
@inject HttpClient HttpClient
@inject IJSRuntime JSRuntime
@inject IConfiguration Configuration
@inject Microsoft.AspNetCore.Components.WebAssembly.Authentication.IAccessTokenProvider TokenProvider

@inherits AbpComponentBase
@attribute [Authorize(SurveyManagerPermissions.Indicators.ViewAll)]

<div class="modern-page-wrapper">
    <div class="glass-card">
        <div class="gradient-header">
            <div class="gradient-header-content">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <div class="header-icon-box me-3">
                            <Icon Name="IconName.ChartLine" Size="IconSize.ExtraLarge" />
                        </div>
                        <div>
                            <h2 class="mb-1 fw-bold text-white">@LH.Localize("IndicatorDetails")</h2>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <Button Color="Color.Primary" Clicked="ExportPdf" Disabled="@isExporting" Class="btn-modern">
                            @if (isExporting)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <text>Exporting...</text>
                            }
                            else
                            {
                                <text>Export PDF</text>
                            }
                        </Button>
                        <Button Color="Color.Secondary" Outline Clicked="Back" Class="btn-light">
                            @LH.Localize("Back")
                        </Button>
                    </div>
                </div>
            </div>
        </div>

        <div class="px-4 pb-4">

    @if (Indicator == null)
    {
        <div class="text-center py-5">
            <p class="text-muted">@LH.Localize("Loading")...</p>
        </div>
    }
    else
    {
        <!-- Indicator Information Card -->
        <div class="dashboard-card mb-4">
            <div class="dashboard-card-body">
                <div class="d-flex align-items-start justify-content-between mb-3">
                    <div class="flex-grow-1">
                        <h3 class="mb-2 fw-bold">@Indicator.Name</h3>
                        @if (!string.IsNullOrEmpty(Indicator.Description))
                        {
                            <p class="text-muted mb-0">@Indicator.Description</p>
                        }
                    </div>
                    <div>
                        @if (Indicator.IsActive)
                        {
                            <Badge Color="Color.Success" Class="px-3 py-2">@LH.Localize("Active")</Badge>
                        }
                        else
                        {
                            <Badge Color="Color.Secondary" Class="px-3 py-2">@LH.Localize("Inactive")</Badge>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Linked Questions Section -->
        <div class="mb-4">
            <h4 class="mb-3 fw-semibold">@LH.Localize("LinkedQuestions")</h4>
            
            @if (LinkedQuestions == null || !LinkedQuestions.Any())
            {
                <Alert Color="Color.Info" Visible Class="mb-0">
                    @LH.Localize("NoQuestionsLinkedToThisIndicator")
                </Alert>
            }
            else
            {
                @foreach (var question in LinkedQuestions)
                {
                    <Card Class="mb-4 shadow-sm">
                        <CardHeader Class="bg-light p-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="flex-grow-1">
                                    <h5 class="mb-1 fw-semibold">@question.Text</h5>
                                    <Badge Color="Color.Secondary" Class="mt-1">@question.Type</Badge>
                                </div>
                            </div>
                        </CardHeader>
                        <CardBody Class="p-4">
                            @if (question.Options != null && question.Options.Any())
                            {
                                <div class="mb-4">
                                    <h6 class="fw-semibold mb-2">@LH.Localize("Options"):</h6>
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var option in question.Options)
                                        {
                                            <li class="mb-1">
                                                <span class="badge bg-secondary me-2">@option.Type</span>
                                                @option.Label
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }

                            @if (QuestionResponses.ContainsKey(question.Id))
                            {
                                var responses = QuestionResponses[question.Id];
                                
                                <div class="mb-4">
                                    <h6 class="fw-semibold mb-3">@LH.Localize("ResponseStatistics")</h6>
                                    
                                    @if (!responses.Any())
                                    {
                                        <p class="text-muted mb-0">@LH.Localize("NoResponsesRecordedYet")</p>
                                    }
                                    else
                                    {
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="card border-0 bg-light">
                                                    <div class="card-body p-3">
                                                        <div class="d-flex align-items-center">
                                                            <div class="flex-grow-1">
                                                                <small class="text-muted d-block">@LH.Localize("TotalResponses")</small>
                                                                <strong class="fs-4">@responses.Count</strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="card border-0 bg-light">
                                                    <div class="card-body p-3">
                                                        <div class="d-flex align-items-center">
                                                            <div class="flex-grow-1">
                                                                <small class="text-muted d-block">@LH.Localize("SubmittedResponses")</small>
                                                                <strong class="fs-4">@responses.Count(r => r.IsSubmitted)</strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        @if (question.Type == QuestionType.Likert1To5 || question.Type == QuestionType.Likert1To7)
                                        {
                                            var submittedResponses = responses.Where(r => r.IsSubmitted && r.AnswerValue.HasValue).ToList();
                                            if (submittedResponses.Any())
                                            {
                                                var average = submittedResponses.Average(r => r.AnswerValue.Value);
                                                var maxValue = question.Type == QuestionType.Likert1To5 ? 5 : 7;
                                                
                                                <div class="alert alert-info mb-3">
                                                    <strong>@LH.Localize("AverageRating"):</strong> 
                                                    <span class="fs-5 fw-bold">@average.ToString("F2")</span> / @maxValue
                                                </div>
                                            }
                                        }
                                        else if (question.Options != null && question.Options.Any())
                                        {
                                            var submittedResponses = responses.Where(r => r.IsSubmitted).ToList();
                                            if (submittedResponses.Any())
                                            {
                                                <div class="mb-3">
                                                    <strong class="d-block mb-2">@LH.Localize("OptionDistribution"):</strong>
                                                    <div class="table-responsive">
                                                        <table class="table table-sm table-bordered">
                                                            <thead class="table-light">
                                                                <tr>
                                                                    <th>@LH.Localize("Option")</th>
                                                                    <th>@LH.Localize("Count")</th>
                                                                    <th>@LH.Localize("Percentage")</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var option in question.Options)
                                                                {
                                                                    var count = submittedResponses.Count(r => r.SelectedOptionIds.Contains(option.Id));
                                                                    var percentage = submittedResponses.Count > 0 ? (count * 100.0 / submittedResponses.Count) : 0;
                                                                    
                                                                    <tr>
                                                                        <td>@option.Label</td>
                                                                        <td>@count</td>
                                                                        <td>@percentage.ToString("F1")%</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            }

                            <!-- Employee Responses Table -->
                            @if (QuestionResponseDetails.ContainsKey(question.Id))
                            {
                                var responseDetails = QuestionResponseDetails[question.Id];
                                
                                <div class="mt-4 pt-4 border-top">
                                    <h6 class="fw-semibold mb-3">Employee Responses</h6>
                                    
                                    @if (!responseDetails.Any())
                                    {
                                        <p class="text-muted mb-0">No employee responses available.</p>
                                    }
                                    else
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-hover table-striped">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th style="width: 40%;">Employee Email</th>
                                                        <th style="width: 60%;">Answer</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var detail in responseDetails)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <span class="text-primary">@detail.EmployeeEmail</span>
                                                            </td>
                                                            <td>
                                                                <span class="fw-medium">@detail.Answer</span>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                </div>
                            }
                        </CardBody>
                    </Card>
                }
            }
        </div>
    }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Guid Id { get; set; }

    private IndicatorDto? Indicator { get; set; }
    private List<QuestionDto> LinkedQuestions { get; set; } = new();
    private Dictionary<Guid, List<QuestionResponseSummaryDto>> QuestionResponses { get; set; } = new();
    private Dictionary<Guid, List<QuestionResponseDetailDto>> QuestionResponseDetails { get; set; } = new();
    private bool isExporting = false;

    protected override async Task OnParametersSetAsync()
    {
        await LoadIndicatorAsync();
        await LoadLinkedQuestionsAsync();
        await LoadResponsesAsync();
        await LoadResponseDetailsAsync();
    }

    private async Task LoadIndicatorAsync()
    {
        Indicator = await IndicatorAppService.GetAsync(Id);
    }

    private async Task LoadLinkedQuestionsAsync()
    {
        if (Indicator == null || Indicator.QuestionIds == null || !Indicator.QuestionIds.Any())
        {
            LinkedQuestions = new List<QuestionDto>();
            return;
        }

        var allQuestions = await QuestionAppService.GetListAsync(new PagedAndSortedResultRequestDto { MaxResultCount = 1000 });
        LinkedQuestions = allQuestions.Items.Where(q => Indicator.QuestionIds.Contains(q.Id)).ToList();
    }

    private async Task LoadResponsesAsync()
    {
        QuestionResponses = new Dictionary<Guid, List<QuestionResponseSummaryDto>>();

        foreach (var question in LinkedQuestions)
        {
            try
            {
                var responses = await ResponseAppService.GetResponsesByQuestionIdAsync(question.Id);
                QuestionResponses[question.Id] = responses;
            }
            catch
            {
                QuestionResponses[question.Id] = new List<QuestionResponseSummaryDto>();
            }
        }
    }

    private async Task LoadResponseDetailsAsync()
    {
        QuestionResponseDetails = new Dictionary<Guid, List<QuestionResponseDetailDto>>();

        foreach (var question in LinkedQuestions)
        {
            try
            {
                var details = await ResponseAppService.GetQuestionResponseDetailsAsync(question.Id);
                QuestionResponseDetails[question.Id] = details;
            }
            catch
            {
                QuestionResponseDetails[question.Id] = new List<QuestionResponseDetailDto>();
            }
        }
    }

    private void Back()
    {
        NavigationManager.NavigateTo("/indicators");
    }

    private async Task ExportPdf()
    {
        if (Indicator == null || isExporting)
            return;

        isExporting = true;
        StateHasChanged();

        try
        {
            // Get the API base URL from RemoteServices configuration
            var apiBaseUrl = Configuration["RemoteServices:Default:BaseUrl"]?.TrimEnd('/') 
                ?? "https://localhost:44360";
            var apiUrl = $"{apiBaseUrl}/api/app/indicator/{Id}/export-pdf?exportAllResponses=true";

            // Get access token
            var tokenResult = await TokenProvider.RequestAccessToken();
            if (tokenResult.TryGetToken(out var token))
            {
                // Create request with authentication header
                var request = new HttpRequestMessage(HttpMethod.Get, apiUrl);
                request.Headers.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token.Value);

                var response = await HttpClient.SendAsync(request);

                if (response.IsSuccessStatusCode)
                {
                    var content = await response.Content.ReadAsByteArrayAsync();
                    var fileName = $"Indicator_{Indicator.Name.Replace(" ", "_")}_{DateTime.Now:yyyyMMdd_HHmm}.pdf";
                    fileName = System.Text.RegularExpressions.Regex.Replace(fileName, @"[^\w\-_\.]", "_");

                    // Convert to base64 for reliable transfer to JavaScript
                    var base64Content = Convert.ToBase64String(content);
                    
                    // Download the file using JavaScript
                    await JSRuntime.InvokeVoidAsync("downloadFile", fileName, base64Content, "application/pdf");
                }
                else
                {
                    var errorMessage = await response.Content.ReadAsStringAsync();
                    await JSRuntime.InvokeVoidAsync("alert", $"Failed to export PDF: {errorMessage}");
                }
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to get access token. Please try logging in again.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error exporting PDF: {ex.Message}");
        }
        finally
        {
            isExporting = false;
            StateHasChanged();
        }
    }
}
