@page "/dashboard"
@using Volo.Abp.Application.Dtos
@using Ejada.SurveyManager.Surveys
@using Ejada.SurveyManager.Surveys.Dtos
@using Ejada.SurveyManager.SurveyInstances
@using Ejada.SurveyManager.SurveyInstances.Dtos
@using Ejada.SurveyManager.SurveyInstances.Enums
@using Ejada.SurveyManager.Indicators
@using Ejada.SurveyManager.Indicators.Dtos
@using Ejada.SurveyManager.Localization
@using Volo.Abp.Identity
@inject ISurveyAppService SurveyService
@inject ISurveyInstanceAppService SurveyInstanceService
@inject IIndicatorAppService IndicatorService
@inject IIdentityUserAppService UserService
@inject NavigationManager NavigationManager
@inject Volo.Abp.AspNetCore.Components.Web.AbpBlazorMessageLocalizerHelper<SurveyManagerResource> LH
@inherits SurveyManagerComponentBase

<PageTitle>@LH.Localize("Dashboard")</PageTitle>

<div class="modern-page-wrapper">
    <div class="glass-card">
        <div class="gradient-header">
            <div class="gradient-header-content">
                <div class="d-flex align-items-center mb-3">
                    <div class="header-icon-box me-3">
                        <Icon Name="IconName.Dashboard" Size="IconSize.ExtraLarge" />
                    </div>
                    <div>
                        <h2 class="mb-1 fw-bold text-white">@LH.Localize("Dashboard")</h2>
                        <p class="text-white-50 mb-0">@LH.Localize("WelcomeToSurveyManager")</p>
                    </div>
                </div>
            </div>
        </div>

    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">@LH.Localize("Loading")</span>
            </div>
            <p class="mt-3 text-muted">@LH.Localize("Loading")</p>
        </div>
    }
    else
    {
        <!-- Statistics Cards -->
        <div class="info-cards-grid">
            <div class="modern-info-card accent-primary">
                <div class="card-icon-wrapper">
                    <Icon Name="IconName.Poll" Size="IconSize.ExtraLarge" />
                </div>
                <div class="card-label">@LH.Localize("TotalSurveys")</div>
                <div class="card-value">@TotalSurveys</div>
            </div>
            <div class="modern-info-card accent-success">
                <div class="card-icon-wrapper">
                    <Icon Name="IconName.CheckCircle" Size="IconSize.ExtraLarge" />
                </div>
                <div class="card-label">@LH.Localize("ActiveSurveys")</div>
                <div class="card-value">@ActiveSurveys</div>
            </div>
            <div class="modern-info-card accent-info">
                <div class="card-icon-wrapper">
                    <Icon Name="IconName.Clipboard" Size="IconSize.ExtraLarge" />
                </div>
                <div class="card-label">@LH.Localize("TotalAssignments")</div>
                <div class="card-value">@TotalAssignments</div>
            </div>
            <div class="modern-info-card accent-warning">
                <div class="card-icon-wrapper">
                    <Icon Name="IconName.ChartLine" Size="IconSize.ExtraLarge" />
                </div>
                <div class="card-label">@LH.Localize("TotalIndicators")</div>
                <div class="card-value">@TotalIndicators</div>
            </div>
        </div>

        <!-- Status Breakdown -->
        <div class="px-4 pb-4">
            <Row Class="g-4 mb-4">
                <Column ColumnSize="ColumnSize.Is6">
                    <div class="dashboard-card">
                        <div class="dashboard-card-header">
                            <h5 class="dashboard-card-title">
                                <Icon Name="IconName.ChartPie" Class="text-primary me-2" />
                                @LH.Localize("AssignmentStatusBreakdown")
                            </h5>
                        </div>
                        <div class="dashboard-card-body">
                            <div class="d-flex flex-column gap-3">
                                <div class="d-flex align-items-center justify-content-between p-3 bg-info bg-opacity-10 rounded">
                                    <div class="d-flex align-items-center">
                                        <Badge Color="Color.Info" Class="me-3">
                                            <Icon Name="IconName.Clock" />
                                        </Badge>
                                        <span class="fw-semibold">@LH.Localize("Assigned")</span>
                                    </div>
                                    <h5 class="mb-0 fw-bold text-info">@AssignedCount</h5>
                                </div>
                                <div class="d-flex align-items-center justify-content-between p-3 bg-warning bg-opacity-10 rounded">
                                    <div class="d-flex align-items-center">
                                        <Badge Color="Color.Warning" Class="me-3">
                                            <Icon Name="IconName.Sync" />
                                        </Badge>
                                        <span class="fw-semibold">@LH.Localize("InProgress")</span>
                                    </div>
                                    <h5 class="mb-0 fw-bold text-warning">@InProgressCount</h5>
                                </div>
                                <div class="d-flex align-items-center justify-content-between p-3 bg-success bg-opacity-10 rounded">
                                    <div class="d-flex align-items-center">
                                        <Badge Color="Color.Success" Class="me-3">
                                            <Icon Name="IconName.Check" />
                                        </Badge>
                                        <span class="fw-semibold">@LH.Localize("Submitted")</span>
                                    </div>
                                    <h5 class="mb-0 fw-bold text-success">@SubmittedCount</h5>
                                </div>
                                <div class="d-flex align-items-center justify-content-between p-3 bg-danger bg-opacity-10 rounded">
                                    <div class="d-flex align-items-center">
                                        <Badge Color="Color.Danger" Class="me-3">
                                            <Icon Name="IconName.ExclamationTriangle" />
                                        </Badge>
                                        <span class="fw-semibold">@LH.Localize("Expired")</span>
                                    </div>
                                    <h5 class="mb-0 fw-bold text-danger">@ExpiredCount</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </Column>
                <Column ColumnSize="ColumnSize.Is6">
                    <div class="dashboard-card">
                        <div class="dashboard-card-header">
                            <h5 class="dashboard-card-title">
                                <Icon Name="IconName.Clock" Class="text-primary me-2" />
                                @LH.Localize("RecentlyCreatedSurveys")
                            </h5>
                        </div>
                        <div class="dashboard-card-body">
                            @if (RecentSurveys != null && RecentSurveys.Any())
                            {
                                <div class="list-group list-group-flush">
                                    @foreach (var survey in RecentSurveys.Take(5))
                                    {
                                        <div class="list-group-item border-0 px-0 py-3">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <div class="d-flex align-items-center">
                                                    <Icon Name="IconName.Poll" Class="text-primary me-3" />
                                                    <div>
                                                        <h6 class="mb-1 fw-semibold">@survey.Name</h6>
                                                        <small class="text-muted">@survey.CreationTime.ToString("MMM dd, yyyy")</small>
                                                    </div>
                                                </div>
                                                @if (survey.IsActive)
                                                {
                                                    <Badge Color="Color.Success">@LH.Localize("Active")</Badge>
                                                }
                                                else
                                                {
                                                    <Badge Color="Color.Secondary">@LH.Localize("Inactive")</Badge>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4 text-muted">
                                    <Icon Name="IconName.Inbox" Size="IconSize.ExtraLarge" Class="mb-2 opacity-50" />
                                    <p class="mb-0">@LH.Localize("NoRecentSurveys")</p>
                                </div>
                            }
                        </div>
                    </div>
                </Column>
            </Row>

            <!-- Latest Assignments -->
            <Row Class="g-4">
                <Column ColumnSize="ColumnSize.Is12">
                    <div class="dashboard-card">
                        <div class="dashboard-card-header">
                            <div class="d-flex align-items-center justify-content-between">
                                <h5 class="dashboard-card-title">
                                    <Icon Name="IconName.List" Class="text-primary me-2" />
                                    @LH.Localize("LatestSurveyAssignments")
                                </h5>
                                <Button Color="Color.Primary" Outline Clicked="NavigateToSurveyInstances">
                                    @LH.Localize("ViewAll")
                                    <Icon Name="IconName.ArrowRight" />
                                </Button>
                            </div>
                        </div>
                        <div class="dashboard-card-body p-0">
                            @if (LatestAssignments != null && LatestAssignments.Any())
                            {
                                <div class="modern-table-wrapper">
                                    <table class="table modern-table mb-0">
                                        <thead>
                                        <tr>
                                            <th>@LH.Localize("Survey")</th>
                                            <th>@LH.Localize("Assignee")</th>
                                            <th>@LH.Localize("Status")</th>
                                            <th>@LH.Localize("DueDate")</th>
                                            <th>@LH.Localize("Created")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var assignment in LatestAssignments.Take(10))
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <Icon Name="IconName.Poll" Class="text-primary me-2" />
                                                        <strong>@assignment.SurveyName</strong>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <Icon Name="IconName.User" Class="text-info me-2" />
                                                        <span>@GetUserEmail(assignment.AssigneeUserId)</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    @switch (assignment.Status)
                                                    {
                                                        case SurveyInstanceStatus.Assigned:
                                                            <Badge Color="Color.Info">
                                                                <Icon Name="IconName.Clock" />
                                                                @LH.Localize("Assigned")
                                                            </Badge>
                                                            break;
                                                        case SurveyInstanceStatus.InProgress:
                                                            <Badge Color="Color.Warning">
                                                                <Icon Name="IconName.Sync" />
                                                                @LH.Localize("InProgress")
                                                            </Badge>
                                                            break;
                                                        case SurveyInstanceStatus.Submitted:
                                                            <Badge Color="Color.Success">
                                                                <Icon Name="IconName.Check" />
                                                                @LH.Localize("Submitted")
                                                            </Badge>
                                                            break;
                                                        case SurveyInstanceStatus.Expired:
                                                            <Badge Color="Color.Danger">
                                                                <Icon Name="IconName.ExclamationTriangle" />
                                                                @LH.Localize("Expired")
                                                            </Badge>
                                                            break;
                                                    }
                                                </td>
                                                <td>
                                                    @if (assignment.DueDate.HasValue)
                                                    {
                                                        <span>@assignment.DueDate.Value.ToString("MMM dd, yyyy")</span>
                                                    }
                                                    else
                                                    {
                                                        <Badge Color="Color.Secondary">@LH.Localize("NoDueDate")</Badge>
                                                    }
                                                </td>
                                                <td>
                                                    <small class="text-muted">@assignment.CreationTime.ToString("MMM dd, yyyy")</small>
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5 text-muted">
                                    <Icon Name="IconName.Inbox" Size="IconSize.ExtraLarge" Class="mb-2 opacity-50" />
                                    <p class="mb-0">@LH.Localize("NoAssignmentsFound")</p>
                                </div>
                            }
                        </div>
                    </div>
                </Column>
            </Row>
        </div>
    }
</div>
</div>

@code {
    private bool IsLoading = true;
    private int TotalSurveys = 0;
    private int ActiveSurveys = 0;
    private int TotalAssignments = 0;
    private int TotalIndicators = 0;
    private int AssignedCount = 0;
    private int InProgressCount = 0;
    private int SubmittedCount = 0;
    private int ExpiredCount = 0;
    private List<SurveyDto> RecentSurveys = new List<SurveyDto>();
    private List<SurveyInstanceDto> LatestAssignments = new List<SurveyInstanceDto>();
    private Dictionary<Guid, string> UserEmails = new Dictionary<Guid, string>();

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardDataAsync();
    }

    private async Task LoadDashboardDataAsync()
    {
        try
        {
            IsLoading = true;

            // Load surveys
            var surveysResult = await SurveyService.GetListAsync(new PagedAndSortedResultRequestDto 
            { 
                MaxResultCount = 1000,
                Sorting = "CreationTime DESC"
            });
            TotalSurveys = (int)surveysResult.TotalCount;
            ActiveSurveys = surveysResult.Items.Count(s => s.IsActive);
            RecentSurveys = surveysResult.Items.Take(5).ToList();

            // Load survey instances
            var instancesResult = await SurveyInstanceService.GetListAsync(new PagedAndSortedResultRequestDto 
            { 
                MaxResultCount = 1000,
                Sorting = "CreationTime DESC"
            });
            TotalAssignments = (int)instancesResult.TotalCount;
            AssignedCount = instancesResult.Items.Count(i => i.Status == SurveyInstanceStatus.Assigned);
            InProgressCount = instancesResult.Items.Count(i => i.Status == SurveyInstanceStatus.InProgress);
            SubmittedCount = instancesResult.Items.Count(i => i.Status == SurveyInstanceStatus.Submitted);
            ExpiredCount = instancesResult.Items.Count(i => i.Status == SurveyInstanceStatus.Expired);
            LatestAssignments = instancesResult.Items.Take(10).ToList();
            
            // Load user emails for assignments
            await LoadUserEmailsAsync();

            // Load indicators
            var indicatorsResult = await IndicatorService.GetListAsync(new PagedAndSortedResultRequestDto 
            { 
                MaxResultCount = 1000
            });
            TotalIndicators = (int)indicatorsResult.TotalCount;
        }
        catch (Exception ex)
        {
            // Handle error - could show a message to user
            Console.WriteLine($"Error loading dashboard data: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task LoadUserEmailsAsync()
    {
        // Get unique user IDs from latest assignments
        var userIds = LatestAssignments.Select(a => a.AssigneeUserId).Distinct().ToList();
        
        // Load user details for each ID
        foreach (var userId in userIds)
        {
            if (!UserEmails.ContainsKey(userId))
            {
                try
                {
                    var user = await UserService.GetAsync(userId);
                    UserEmails[userId] = user.Email ?? user.UserName;
                }
                catch
                {
                    UserEmails[userId] = "Unknown User";
                }
            }
        }
    }

    private string GetUserEmail(Guid userId)
    {
        return UserEmails.TryGetValue(userId, out var email) ? email : "Loading...";
    }

    private void NavigateToSurveyInstances()
    {
        NavigationManager.NavigateTo("/survey-instances");
    }
}

